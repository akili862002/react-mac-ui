{
  "name": "react-mac-ui",
  "description": "react-mac-ui is a component library for React that replicates the classic macOS design. It offers a wide range of UI components with a modern and clean look to enhance the aesthetic of your project",
  "author": "Dung Nguyen",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "typings": "index.d.ts",
  "files": [
    "index.js",
    "config.js",
    "README.md",
    "LICENSE"
  ],
  "version": "1.0.0",
  "scripts": {
    "clean-dist": "rm -rf dist",
    "build:cjs": "swc ./src -d ./dist --only ./src/index.tsx --config-file .swcrc",
    "build:ts": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "copy": "cp ./package.json ./dist && cp ./config.js ./dist && cp ./README.md ./dist && cp ./LICENSE ./dist && cp ./styles/main.css ./dist",
    "build": "yarn clean-dist && yarn build:ts && yarn build:cjs  && yarn copy",
    "dev": "yarn storybook",
    "sb": "yarn storybook",
    "storybook": "start-storybook -p 3001 -s public",
    "build:sb": "build-storybook -o dist-sb",
    "publish-lib": "bash ./scripts/publish-lib.sh",
    "release-lib": "yarn build && yarn publish-lib",
    "release-sb": "yarn build:sb && yarn deploy-sb",
    "deploy-sb": "bash ./scripts/deploy-sb.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "awesome-debounce-promise": "^2.1.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "deepmerge": "^4.2.2",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "draftjs-utils": "^0.10.2",
    "events": "^3.3.0",
    "formik": "^2.2.9",
    "fuse.js": "^6.6.2",
    "html-to-draftjs": "^1.5.0",
    "material-ripple-effects": "^2.0.1",
    "postcss": "^8.4.14",
    "react-beautiful-dnd": "^13.1.0",
    "react-dropzone": "^14.2.2",
    "react-hot-toast": "^2.3.0",
    "react-image-crop": "^10.0.4",
    "react-nice-dates": "^3.1.0",
    "react-number-format": "^4.9.3",
    "react-table": "^7.8.0",
    "react-tooltip": "^5.7.4",
    "react-use": "^17.4.0",
    "tailwind-merge": "^1.3.0",
    "util": "^0.12.4",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/node-logger": "^6.5.9",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.9",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.241",
    "@types/draft-js": "^0.11.9",
    "@types/react": "^18.0.0",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^18.0.0",
    "@types/react-table": "^7.7.12",
    "@types/uuid": "^8.3.4",
    "husky": "^4.2.5",
    "path": "^0.12.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook-addon-preview": "^2.2.0",
    "tailwindcss": "^3.1.4",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.6.6",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-image-crop": "^10",
    "react-nice-dates": "^3",
    "react-table": "^7.8.0",
    "tailwindcss": ">=3.0.0"
  },
  "keywords": [
    "ui",
    "tailwind",
    "react",
    "library"
  ]
}
